#include<iostream>
#include<ctime>
#include<cstdlib>
#include<cstring>
#include<unistd.h>
using namespace std;
int main()
{
    int lowestRate=3;
    int BER=50;
    int BER_rise_min=5;
    int BER_rise_max=15;
    int BER_rise;
    int highestRate=8;
    int mutarate;
    int mutanum;
    int mutafirst=1;
    int mutalast=9;
    string mutaname;
    int spreadrate=5;
    srand(time(NULL)); 
    for(int i=mutarate; i>0; i--)
    {
      mutarate= rand()%((highestRate-lowestRate)+1)+lowestRate;
      cout<<"You will receive a mutation in "<<mutarate<<" turns.";
      --mutarate;
      sleep(10000);
    }
    mutanum=rand()%((mutalast-mutafirst)+1)+mutafirst;
    if(mutarate==0)
      cout<<"You have received a new mutation! It is mutation number "<<mutanum<<". ";
      switch (mutanum)
      {
        case 1:
          mutaname="Favoured spread";
          cout<<"It is the mutation of "<<mutaname<<". Its effect is that the country colonization rate decreases by 1. ";
          spreadrate=4;
          break;
        case 2:
          mutaname="Impeded spread";
          cout<<"It is the mutation of "<<mutaname<<". Its effect is that the country colonization rate increases by 1. ";
          spreadrate=6;
          break;
        case 3:
          mutaname="Strain Evolution";
          cout<<"It is the mutation of "<<mutaname<<". Its effect is that the the number of turns left before Eradication increases between 5 and 15.";
          BER_rise=rand()%((BER_rise_max-BER_rise_min)+1)+BER_rise_min;
          BER=BER+BER_rise;
          cout<<"The new rate of eradication is: "<<BER;
          break;
       case 4:
          mutaname="Strain Extinction";
          cout<<"It is the mutation of "<<mutaname;
          break;
      }
    cout<<"Rate of country colonization is now "<<spreadrate<<". ";
    return 0;
}    
